    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="122dp"
        android:layout_height="26dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@mipmap/module_login_passport_logo"
        />

    <LinearLayout
        android:id="@+id/ly_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/module_login_edit_margin"
        android:layout_marginRight="@dimen/module_login_edit_margin"
        android:layout_marginTop="58dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/dt_account_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edit_bg"
            android:cursorVisible="true"
            android:gravity="left"
            android:hint="手机号"
            android:inputType="phone"
            android:imeOptions="actionNext"
            android:lines="1"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textColor="@color/_222222"
            android:textColorHint="@color/_bfbfbf"
            android:textSize="@dimen/ts_13sp" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/fy_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_login"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/module_login_edit_margin"
        android:layout_marginRight="@dimen/module_login_edit_margin"
        android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/et_password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:background="@drawable/border_edit_bg"
            android:gravity="left"
            android:hint="密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="30"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textColor="@color/_222222"
            android:textColorHint="@color/_bfbfbf"
            android:textSize="@dimen/ts_13sp" />

        <ImageView
            android:id="@+id/verification_code_see_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/module_login_day_password_see" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/module_login_btn_height"
        android:layout_below="@+id/fy_password"
        android:paddingTop="4dp"
        android:layout_marginLeft="@dimen/module_login_btn_margin"
        android:layout_marginRight="@dimen/module_login_btn_margin"
        android:layout_marginTop="38dp"
        android:background="@drawable/module_login_button_select"
        android:gravity="center"
        android:textColor="@color/_ffffff_999999"
        android:textSize="@dimen/ts_16sp"
        tools:text="登录" />


    <LinearLayout
        android:id="@+id/ly_login_button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_login"
        android:layout_marginLeft="@dimen/module_login_margin"
        android:layout_marginRight="@dimen/module_login_margin"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_verification_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="5dp"
            android:textColor="@color/_666666"
            android:textSize="@dimen/ts_12sp"
            tools:text="通过短信验证码登录" />

        <TextView
            android:id="@+id/tv_forget_password_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="5dp"
            android:textColor="@color/_666666"
            android:textSize="@dimen/ts_12sp"
            tools:text="忘记密码" />

    </LinearLayout>



</RelativeLayout>