<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/_ffffff_202124">

    <LinearLayout
        android:id="@+id/ly_login_button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_login"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_verification_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="5dp"
            android:textColor="@color/_f44b50_8e3636"
            android:textSize="@dimen/ts_11sp"
            tools:text="通过短信验证码登录" />

        <TextView
            android:id="@+id/tv_forget_password_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="5dp"
            android:textColor="@color/_f44b50_8e3636"
            android:textSize="@dimen/ts_11sp"
            tools:text="忘记密码" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:src="@mipmap/module_login_day_zbtxz" />

    <LinearLayout
        android:id="@+id/ly_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="46dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/dt_account_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edit_bg"
            android:cursorVisible="true"
            android:gravity="left"
            android:hint="手机号"
            android:imeOptions="actionNext"
            android:lines="1"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:singleLine="true"
            android:textColor="@color/_484848_7a7b7d"
            android:textColorHint="@color/_999999_5c5c5c"
            android:textSize="@dimen/ts_14sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fy_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_login"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/et_password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:background="@drawable/border_edit_bg"
            android:gravity="left"
            android:hint="密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="30"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:textColor="@color/_484848_7a7b7d"
            android:textColorHint="@color/_999999_5c5c5c"
            android:textSize="@dimen/ts_14sp" />

        <ImageView
            android:id="@+id/verification_code_see_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/module_login_day_password_see" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/fy_password"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/border_login_text_bg"
        android:gravity="center"
        android:textColor="@color/_ffffff_999999"
        android:textSize="@dimen/ts_16sp"
        tools:text="登录" />

</RelativeLayout>