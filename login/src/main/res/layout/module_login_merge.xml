<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/_ffffff_202124">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/iv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="38dp"
            android:textColor="@color/_222222"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="@string/zb_register_merge_title" />

        <TextView
            android:id="@+id/tv_bind_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/ts_13sp"
            android:textColor="@color/_d12324"
            android:text="@string/zb_mobile_bind_desc"
            />

        <!--<TextView-->
            <!--android:id="@+id/tv_bind_second_desc"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="63dp"-->
            <!--android:layout_marginRight="63dp"-->
            <!--android:includeFontPadding="false"-->
            <!--android:layout_marginTop="6dp"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:gravity="center"-->
            <!--android:textSize="@dimen/ts_12sp"-->
            <!--android:maxLines="2"-->
            <!--android:ellipsize="end"-->
            <!--android:textColor="@color/_666666"-->
            <!--/>-->

        <include
            android:id="@+id/user_info_top"
            layout="@layout/module_login_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="29dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="14dp"
            android:textSize="@dimen/ts_13sp"
            android:textColor="@color/_d12324"
            android:text="当前登录帐号"
            android:includeFontPadding="false"
            />

        <include
            android:id="@+id/user_info_bottom"
            layout="@layout/module_login_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="6dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="56dp"
            >

            <!--调整背景-->
            <Button
                android:id="@+id/tv_quit"
                android:layout_width="152dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="放弃绑定"
                android:textColor="@color/_222222"
                android:background="@drawable/border_login_bind_cancle_btn_bg"
                android:textSize="@dimen/ts_15sp" />

            <Button
                android:id="@+id/tv_bind"
                android:layout_width="152dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="确认绑定"
                android:textColor="@color/_ffffff"
                android:background="@drawable/border_login_bind_btn_bg"
                android:textSize="@dimen/ts_15sp"
                style="?android:attr/borderlessButtonStyle" />
        </RelativeLayout>

    </LinearLayout>



</ScrollView>