<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bc_ffffff">

    <com.zjrb.core.ui.widget.CircleImageView
        android:id="@+id/iv_logo"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        tools:src="@mipmap/module_login_day_zbtxz"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="?attr/tc_484848"
        android:textSize="11sp"
        tools:text="重设通行证密码"/>

    <com.zjrb.core.ui.widget.DeleteEditText
        android:id="@+id/dt_account_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/border_edit_bg"
        android:cursorVisible="true"
        android:gravity="left"
        android:hint="手机号码"
        android:lines="1"
        android:maxLines="1"
        android:paddingBottom="7.5dp"
        android:paddingLeft="5dp"
        android:paddingTop="7.5dp"
        android:textColor="?attr/tc_484848"
        android:textColorHint="?attr/tc_484848"
        android:textSize="@dimen/ts_14sp"/>

    <LinearLayout
        android:id="@+id/ly_sms_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dt_account_text"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="55.5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.zjrb.core.ui.widget.DeleteEditText
            android:id="@+id/et_sms_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/border_edit_bg"
            android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:gravity="left"
            android:hint="验证码"
            android:paddingLeft="5dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingBottom="7.5dp"
            android:paddingTop="7.5dp"
            android:textColor="?attr/tc_999999"
            android:textColorHint="?attr/tc_000000"
            android:textSize="@dimen/ts_14sp"/>

        <TextView
            android:id="@+id/tv_sms_verification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_weight="2"
            android:background="@drawable/border_reset_password_timer_bg"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:textColor="?attr/bc_e85757"
            android:textSize="@dimen/ts_11sp"
            tools:text="短信验证码"/>

    </LinearLayout>


    <Button
        android:id="@+id/bt_confirm"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/ly_login_button_bar"
        android:layout_below="@+id/ly_sms_code"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/border_login_text_bg"
        android:enabled="false"
        android:gravity="center"
        android:textColor="?attr/tc_ffffff"
        android:textSize="@dimen/ts_14sp"
        tools:text="确定"/>

    <TextView
        android:id="@+id/tv_change_login_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_confirm"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="22dp"
        android:enabled="false"
        android:textColor="?attr/tc_f44b50"
        android:textSize="11sp"
        tools:text="验证码短信可能有一定延迟，请耐心稍微等待"/>

</RelativeLayout>