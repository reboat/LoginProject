<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/_ffffff_202124">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:src="@mipmap/module_login_day_zbtxz" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="重设通行证密码"
        android:textColor="@color/_484848_7a7b7d"
        android:textSize="11sp"
        android:visibility="gone"
        />

    <cn.daily.news.biz.core.ui.widget.DeleteLoginEditText
        android:id="@+id/dt_account_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/border_edit_bg"
        android:cursorVisible="true"
        android:gravity="left"
        android:hint="手机号码"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:lines="1"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:singleLine="true"
        android:textColor="@color/_484848_7a7b7d"
        android:textColorHint="@color/_999999_5c5c5c"
        android:textSize="@dimen/ts_14sp" />

    <LinearLayout
        android:id="@+id/ly_sms_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dt_account_text"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="35dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <cn.daily.news.biz.core.ui.widget.DeleteLoginEditText
            android:id="@+id/et_sms_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/border_edit_bg"
            android:digits="1234567890"
            android:gravity="left"
            android:hint="验证码"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:lines="1"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:singleLine="true"
            android:textColor="@color/_484848_7a7b7d"
            android:textColorHint="@color/_999999_5c5c5c"
            android:textSize="@dimen/ts_14sp" />

        <!--@drawable/border_reset_password_timer_bg-->
        <TextView
            android:id="@+id/tv_sms_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:background="@drawable/module_login_bg_sms_verification"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:textColor="@color/sl_tc_sms_verification"
            android:textSize="@dimen/ts_11sp"
            tools:text="重新发送验证码" />

    </LinearLayout>

    <TextView
        android:id="@+id/bt_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/ly_login_button_bar"
        android:layout_below="@+id/ly_sms_code"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/border_login_text_bg"
        android:gravity="center"
        android:textColor="@color/_ffffff_999999"
        android:textSize="@dimen/ts_16sp"
        tools:text="确定" />

    <TextView
        android:id="@+id/tv_change_login_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_confirm"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/_f44b50_8e3636"
        android:textSize="11sp"
        tools:text="验证码短信可能有一定延迟，请耐心稍微等待" />

</RelativeLayout>