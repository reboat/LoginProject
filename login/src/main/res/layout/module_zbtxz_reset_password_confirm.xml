<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/bc_ffffff">

    <TextView
        android:id="@+id/dt_account_text"
        android:layout_width="fill_parent"
        android:layout_height="21dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="64dp"
        android:background="@null"
        android:gravity="left"
        android:maxLines="1"
        android:textColor="?attr/tc_484848"
        android:textColorHint="?attr/tc_484848"
        android:textSize="@dimen/ts_11sp"
        tools:text="输入新密码"/>

    <EditText
        android:id="@+id/et_password_text"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/dt_account_text"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_zblogin_btn_bg"
        android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:gravity="left|center_vertical"
        android:hint="密码 (6-30位数据或字母)"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:textColor="?attr/tc_999999"
        android:textColorHint="?attr/tc_000000"
        android:textSize="@dimen/ts_14sp"/>


    <Button
        android:id="@+id/bt_confirm"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/ly_login_button_bar"
        android:layout_below="@+id/et_password_text"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/border_reset_password_timer_bg"
        android:enabled="false"
        android:gravity="center"
        android:textColor="#8e3636"
        android:textSize="@dimen/ts_14sp"
        tools:text="确认"/>

</RelativeLayout>